@page "{id:int?}"
@model MultipleAppSetup.Pages.BeautyShop.Customer.EditModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Customer.FirstName @Model.Customer.LastName</h2>
<form method="post">
    <input type="hidden" asp-for="Customer.Id" />
    <div class="form-row">
        <div class="form-group col-sm-4">
            <label asp-for="Customer.FirstName"></label>
            <input class="form-control" asp-for="Customer.FirstName" />
            <span class="text-danger" asp-validation-for="Customer.FirstName"></span>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="Customer.LastName"></label>
            <input class="form-control" asp-for="Customer.LastName" />
            <span class="text-danger" asp-validation-for="Customer.LastName"></span>
        </div>
        <div class="form-group col-sm-6">
            <label asp-for="Customer.MembershipId"></label>
            <select class="form-control" asp-for="Customer.MembershipId" asp-items="@Model.Memberships">
                <option value="">Pick a Membership</option>
            </select>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>

