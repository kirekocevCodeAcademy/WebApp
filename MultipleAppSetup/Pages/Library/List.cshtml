@page
@model MultipleAppSetup.Pages.Library.ListModel
@{
    ViewData["Title"] = "List";
}

<h1>Library</h1>
<div>
    <form method="get">
        <div class="form-row">
            <div class="form-group col-sm-5">
                <label asp-for="Author"></label>
                <input placeholder="Authr First or Last Name" type="search" class="form-control" asp-for="Author" />
            </div>
            <div class="form-group col-sm-5">
                <label asp-for="BookTitle"></label>
                <input placeholder="Book Title" type="search" class="form-control" asp-for="BookTitle" />
            </div>
            <div class="form-group col-sm-2 d-flex">
                <button class="btn btn-outline-secondary align-self-end" type="submit">
                    Serach
                </button>
            </div>
        </div>
        
    </form>

    <table class="table">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>Author</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var book in Model.Books)
        {
            <tr>
                <td>
                    @book.Title
                </td>
                <td>
                    @book.Author?.FirstName @book.Author?.LastName
                </td>
                <td>
                    <a class="btn btn-outline-secondary" asp-page="./Book/Edit" asp-route-id="@book.Id">
                        <i class="fas fa-edit"></i>
                    </a>
                </td>
            </tr>
        }
        <tfoot style="visibility:@(!Model.Books.Any() ? "visible" : "hidden")">
            <tr>
                <td colspan="3">
                    Nothing to display.
                </td>
            </tr>
        </tfoot>
    </table>
</div>
<div class="form-group">
    <a class="btn btn-primary" asp-page="./Book/Edit">Add Book</a>
</div>

