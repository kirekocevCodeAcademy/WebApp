@model AuthorViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editing @Model.Author.FirstName @Model.Author.LastName</h2>
<form method="post" asp-action="Edit">
    <input type="hidden" asp-for="@Model.Author.Id" />
    <div class="form-row">
        <div class="form-group col-sm-12">
            <label asp-for="@Model.Author.FirstName"></label>
            <input class="form-control" asp-for="@Model.Author.FirstName" />
            <span class="text-danger" asp-validation-for="@Model.Author.FirstName"></span>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-sm-12">
            <label asp-for="@Model.Author.LastName"></label>
            <input class="form-control" asp-for="@Model.Author.LastName" />
            <span class="text-danger" asp-validation-for="@Model.Author.LastName"></span>
        </div>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

